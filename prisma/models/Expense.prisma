model Expense {
  id          Int         @id @default(autoincrement())
  splitId     Int        
  description String
  totalAmount String      
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  split       Split        @relation(fields: [splitId], references: [id], onDelete: Cascade)
  userExpenses UserExpense[]

  @@map("expense")
  @@index([splitId])
  @@index([createdAt])
}
